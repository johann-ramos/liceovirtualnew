.calendartable th,
.calendartable td {
    border-color: [[setting:bodybgcolor]];
}

.calendar_event_course {background-color:[[setting:calcourse]];}
.calendar_event_global {background-color:[[setting:calglobal]];}
.calendar_event_group {background-color:[[setting:calgroup]];}
.calendar_event_user {background-color:[[setting:caluser]];}

.path-calendar .maincalendar .eventlist .event {
	border: 0 none;
}

.path-calendar .maincalendar .eventlist .event .r0,
.path-calendar .maincalendar .calendartable .r0 {
	background-color: transparent;
}

.path-calendar .maincalendar .eventlist .event .side {
	width: 0;
}

.path-calendar .maincalendar .eventlist .event .calendar_event_course {
	background-color: transparent;
	border: 2px solid [[setting:calcourse]];
}

.path-calendar .maincalendar .eventlist .event .calendar_event_global {
	background-color: transparent;
	border: 2px solid [[setting:calglobal]];
}

.path-calendar .maincalendar .eventlist .event .calendar_event_group {
	background-color: transparent;
	border: 2px solid [[setting:calgroup]];
}

.path-calendar .maincalendar .eventlist .event .calendar_event_user {
	background-color: transparent;
	border: 2px solid [[setting:caluser]];
}

.block .minicalendar {
	margin: 4px 0 0 0;
}

.block .minicalendar td.weekend {color: [[setting:calweekend]];}

.block .minicalendarblock h3 {
	margin: 8px 0 0 0;
}