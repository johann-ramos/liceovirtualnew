.block {
	border: 1px solid [[setting:bodybgcolor]];
	margin-bottom: 4px;
}

.block .header h2 {
	margin: 4px 4px 0;
}

.block .header .block_action .block-hider-hide,
.block .header .block_action .block-hider-show {
	margin-right: 2px;
}

.block .header .block_action input {
	margin-right: 0;
}

.block .header .commands .icon img {
	margin-right: 2px;
}

.block .header .commands .icon:last-of-type img {
	margin-right: 0;
}

.block .content {
	padding: 0 4px 4px 4px;
}

.block.hidden .content {
	display: none;
}

.block .content .list .c1 {
	margin-left: 4px;
}

.block .footer {
	margin: 0;
}

.side-pre-only.blocks-moving #region-post {
    display: block;
    visibility: visible;
    height: auto;
    width: auto;
}

#region-main .block {
    background: none repeat scroll 0 0 transparent;
    border: 0 none;
    box-shadow: none;
}

@media screen and (min-width:[[setting:twocolmin]]) {
    .side-pre-only.blocks-moving #region-post {
        width: 200px;
    }
}

@media screen and (min-width:[[setting:threecolmin]]) {
    .side-pre-only.blocks-moving #region-post-box {
        margin-left: -400px;
    }

    .side-pre-only.blocks-moving #region-main {
        margin-left: 400px;
    }

    .side-pre-only.blocks-moving #region-pre {
        left: 200px;
    }
}