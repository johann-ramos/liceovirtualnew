/* Fix: select menus from not registering as hovered */
.ie.editing .block .section_add_menus,
.ie.editing .section .section_add_menus,
.ie.editing .sitetopic .section_add_menus {
    visibility: visible;
    filter: none;
    opacity: 1;
}

/* Fix YUI 2 Treeview for Right to left languages */
.dir-rtl .ygtvtn,
.dir-rtl .ygtvtm,
.dir-rtl .ygtvtmh,
.dir-rtl .ygtvtmhh,
.dir-rtl .ygtvtp,
.dir-rtl .ygtvtph,
.dir-rtl .ygtvtphh,
.dir-rtl .ygtvln,
.dir-rtl .ygtvlm,
.dir-rtl .ygtvlmh,
.dir-rtl .ygtvlmhh,
.dir-rtl .ygtvlp,
.dir-rtl .ygtvlph,
.dir-rtl .ygtvlphh,
.dir-rtl .ygtvdepthcell,
.dir-rtl .ygtvok,
.dir-rtl .ygtvok:hover,
.dir-rtl .ygtvcancel,
.dir-rtl .ygtvcancel:hover {
    background-image: url([[pix:theme|core/yui2-treeview-sprite-rtl]]);
}