/* Profile Block */

.headermain {
	position: absolute;
	bottom: 0;
	float: none;
}

#profileblock {
    position: absolute;
    bottom: 0;
    margin-bottom: 7px;
    text-align: right;
    width: 100%;
}

#user-pic {
    float: right;
    margin-left: 10px;
}

#user-pic .userpicture {
    width: 80px;
    height: 80px;
}

#user-pic .defaultuserpic {
    background-color: [[setting:linkcolor]];
}

.langmenu {
	margin-top: 5px;
}

/* Branding */

#branding {
	margin-top: 10px;
}

#branding img {
	padding: 0 10px;
}

/**
 * autohide CSS
 * This adds the special autohide css in lib.php if the setting is enabled.
 */

[[setting:useautohide]]

/**
 * Custom CSS
 * This is the very last piece of CSS loaded, so if something looks weird,
 * try removing your custom CSS from the theme settings page.
 */

[[setting:customcss]]